  },
  "resolutions": {
    "orbit-db/orbit-db-store/ipfs-log/orbit-db-io": "1.0.2",
    "**/orbit-db-io": "1.0.2"
  },
  "overrides": {
    "orbit-db-io": {
      ".": "1.0.2"
    }
  },
  "jest": {
    "transform": {},
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node",
    "globalTeardown": "<rootDir>/src/utilsTests/nettoyerTests.ts"
  }
}
