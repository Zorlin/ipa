{
  "name": "@constl/ipa",
  "author": "julienmalard",
  "version": "0.1.13",
  "license": "MIT",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "nettoyer": "rimraf lib",
    "compiler:esm": "cross-env BABEL_ENV=esmUnbundled babel src --extensions '.ts' --out-dir 'lib/esm' --source-maps",
    "compiler:cjs": "cross-env BABEL_ENV=cjs babel src --extensions '.ts' --out-dir 'lib/cjs' --source-maps",
    "compiler:bundles": "cross-env BABEL_ENV=esmBundled rollup -c",
    "déclarations": "ttsc -p tsconfig.json",
    "compiler": "yarn nettoyer && yarn compiler:esm && yarn compiler:cjs && yarn compiler:bundles && yarn déclarations",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' yarn ts-mocha \"tests/**/*.test.ts\" --exit --require mocha-steps -r tsconfig-paths/register",
    "test:tous": "env TOUS=true yarn test",
    "couverture": "nyc yarn test",
    "couverture:tous": "nyc yarn test:tous",
    "formatter": "yarn prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && yarn eslint --ext .js,.ts src",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "publier": "yarn compiler && yarn publish --access public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "lib/cjs/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ipa.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-flow": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@constl/orbit-db-types": "1.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@size-limit/preset-small-lib": "^7.0.4",
    "@types/adm-zip": "^0.4.34",
    "@types/chai-as-promised": "^7.1.4",
    "@types/deep-equal": "^1.0.1",
    "@types/file-saver": "^2.0.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "17.0.2",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-plugin-module-resolver": "^4.1.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "go-ipfs": "^0.11.0",
    "husky": "^7.0.4",
    "ipfsd-ctl": "^10.0.4",
    "mocha": "^9.1.3",
    "mocha-steps": "^1.3.0",
    "nyc": "^15.1.0",
    "orbit-db-test-utils": "^1.3.0",
    "prettier": "^2.5.1",
    "require-json5": "^1.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-natives": "^0.7.5",
    "rollup-plugin-node-gyp": "^0.1.0",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^7.0.4",
    "ts-mocha": "^8.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.0",
    "@chriscdn/promise-semaphore": "^1.0.6",
    "adm-zip": "^0.5.9",
    "deep-equal": "^2.0.5",
    "file-saver": "^2.0.5",
    "geojson-validation": "^1.0.2",
    "ipfs": "0.61.0",
    "ipfs-core": "0.13.0",
    "js-levenshtein": "^1.1.6",
    "jszip": "^3.7.1",
    "libp2p-noise": "^4.0.0",
    "libp2p-webrtc-direct": "^0.7.1",
    "node-localstorage": "^2.2.1",
    "orbit-db": "^0.28.0",
    "orbit-db-access-controllers": "^0.3.2",
    "ssim": "^0.0.0",
    "uuid": "^8.3.2",
    "xlsx": "^0.17.3"
  }
}
