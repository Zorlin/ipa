{
  "version": "0.4.14",
  "license": "AGPL-3.0-or-later",
  "name": "@constl/ipa",
  "author": "Julien Malard-Adam",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "watch": "npm-watch",
    "nettoyer": "rimraf dist",
    "compiler:esm": "tsc -p tsconfig.build.json && tscpaths -p tsconfig.build.json -s src -o dist",
    "compiler": "yarn versioner && yarn nettoyer && yarn compiler:esm",
    "test": "node --no-warnings --experimental-vm-modules ./node_modules/jest/bin/jest.js  --runInBand",
    "test:tous": "env TOUS=true yarn test",
    "test:navigateur": "karma start",
    "couverture": "yarn test --coverage",
    "couverture:tous": "yarn test:tous --coverage",
    "formatter": "yarn prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && yarn eslint --ext .js,.ts src",
    "publier": "yarn test && yarn compiler && yarn version",
    "postversion": "yarn versioner && git push --tags && yarn publish --tag $npm_package_version --new-version $npm_package_version --access public && git push && echo \"On a publi√© version $npm_package_version!\"",
    "versioner": "yarn genversion  --es6 --semi src/version.ts"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts",
        ".tsx"
      ]
    },
    "postbuild": "./dist/**/*"
  },
  "devDependencies": {
    "@constl/orbit-db-types": "^1.0.2",
    "@types/adm-zip": "^0.5.0",
    "@types/crypto-js": "^4.1.1",
    "@types/deep-equal": "^1.0.1",
    "@types/file-saver": "^2.0.3",
    "@types/jest": "^28.1.7",
    "@types/lodash": "^4.14.179",
    "@types/node": "^18.7.13",
    "@types/node-localstorage": "^1.3.0",
    "@types/rimraf": "^3.0.2",
    "@types/tmp": "^0.2.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "bmp-js": "^0.1.0",
    "canvas": "^2.9.0",
    "core-js": "3",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "image-type": "^4.1.0",
    "ipfsd-ctl": "^12.0.0",
    "jest": "^29.0.1",
    "karma": "^6.3.18",
    "karma-chrome-launcher": "^3.1.1",
    "karma-typescript": "^5.5.3",
    "prettier": "^2.5.1",
    "require-json5": "^1.1.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "tmp": "^0.2.1",
    "tsconfig-paths": "^4.1.0",
    "tscpaths": "^0.0.9",
    "ts-jest": "^28.0.8",
    "typescript": "^4.6.2",
    "why-is-node-running": "^2.2.2"
  },
  "dependencies": {
    "@chriscdn/promise-semaphore": "^1.0.6",
    "@herbcaudill/crypto": "^3.0.2",
    "@libp2p/kad-dht": "^3.0.4",
    "@libp2p/mdns": "^3.0.0",
    "@libp2p/tcp": "^3.0.3",
    "@libp2p/webrtc-direct": "^2.0.2",
    "@libp2p/webrtc-star": "^3.0.1",
    "@libp2p/websockets": "^3.0.2",
    "@localfirst/auth": "^1.0.1",
    "adm-zip": "^0.5.9",
    "approx-string-match": "^2.0.0",
    "axios": "^0.27.2",
    "crypto-js": "^4.1.1",
    "deep-equal": "^2.0.5",
    "deepmerge": "^4.2.2",
    "file-saver": "^2.0.5",
    "genversion": "^3.1.1",
    "geojson-validation": "^1.0.2",
    "ipfs": "0.62.3",
    "ipfs-core": "0.14.3",
    "is-node": "^1.0.2",
    "jszip": "^3.7.1",
    "lodash": "^4.17.21",
    "node-localstorage": "^2.2.1",
    "orbit-db": "^0.28.3",
    "orbit-db-access-controllers": "^0.3.2",
    "ssim": "^0.0.0",
    "uuid": "^8.3.2",
    "xlsx": "^0.18.3"
  },
  "jest": {
    "transform": {},
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node",
    "globalTeardown": "<rootDir>/src/utilsTests/nettoyerTests.ts"
  }
}
