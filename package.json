  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "nettoyer": "rimraf lib",
    "compiler:esm": "cross-env BABEL_ENV=esmUnbundled babel src --extensions '.ts' --out-dir 'lib/esm' --source-maps",
    "compiler:cjs": "cross-env BABEL_ENV=cjs babel src --extensions '.ts' --out-dir 'lib/cjs' --source-maps",
    "compiler:bundles": "cross-env BABEL_ENV=esmBundled rollup -c",
    "déclarations": "ttsc -p tsconfig.json",
    "compiler": "yarn nettoyer &&  yarn déclarations && yarn compiler:esm && yarn compiler:cjs && yarn compiler:bundles",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' yarn ts-mocha \"tests/**/*.test.ts\" --exit --require mocha-steps -r tsconfig-paths/register",
    "test:tous": "env TOUS=true yarn test",
    "test:navigateur": "karma start",
    "couverture": "nyc yarn test",
    "couverture:tous": "nyc yarn test:tous",
    "formatter": "yarn prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && yarn eslint --ext .js,.ts src",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "publier": "yarn compiler && yarn publish --access public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "lib/cjs/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ipa.esm.js",
      "limit": "10 KB"
    }
  ],
  "browser": {
    "original-fs": false
  },
